3- import java.util.Scanner;

public class MediaDeDuasNotas {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Pedindo as 2 notas ao usuário
        System.out.println("Informe a primeira nota: ");
        double nota1 = scanner.nextDouble();

        System.out.println("Informe a segunda nota: ");
        double nota2 = scanner.nextDouble();

        // Calculando a média das notas
        double media = (nota1 + nota2) / 2;

        // Exibindo a média
        System.out.println("A média das duas notas é: " + media);

        scanner.close();
    }
}

----------------------------

4- import java.util.Scanner;

public class MediaDeQuatroNotas {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Pedindo as 4 notas ao usuário
        System.out.println("Informe a primeira nota: ");
        double nota1 = scanner.nextDouble();

        System.out.println("Informe a segunda nota: ");
        double nota2 = scanner.nextDouble();

        System.out.println("Informe a terceira nota: ");
        double nota3 = scanner.nextDouble();

        System.out.println("Informe a quarta nota: ");
        double nota4 = scanner.nextDouble();

        // Calculando a média das 4 notas
        double media = (nota1 + nota2 + nota3 + nota4) / 4;

        // Exibindo a média
        System.out.println("A média das quatro notas é: " + media);

        scanner.close();
    }
}

------------------------------------------------

5- import java.util.Scanner;

public class OperacoesMatematicas {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Pedindo os 2 números ao usuário
        System.out.println("Informe o primeiro número: ");
        double numero1 = scanner.nextDouble();

        System.out.println("Informe o segundo número: ");
        double numero2 = scanner.nextDouble();

        // Realizando as operações
        double soma = numero1 + numero2;
        double subtracao = numero1 - numero2;
        double multiplicacao = numero1 * numero2;

        // Evitando divisão por zero
        if (numero2 != 0) {
            double divisao = numero1 / numero2;
            System.out.println("Divisão: " + divisao);
        } else {
            System.out.println("Divisão: Não é possível dividir por zero");
        }

        // Exibindo os resultados
        System.out.println("Soma: " + soma);
        System.out.println("Subtração: " + subtracao);
        System.out.println("Multiplicação: " + multiplicacao);

        scanner.close();
    }
}

------------------------------------------------------

6- import java.util.Scanner;

public class DescontoProduto {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Pedindo os dados ao usuário
        System.out.println("Informe o nome do produto: ");
        String nomeProduto = scanner.nextLine();

        System.out.println("Informe o preço do produto: ");
        double precoProduto = scanner.nextDouble();

        System.out.println("Informe o percentual de desconto (ex: 20 para 20%): ");
        double percentualDesconto = scanner.nextDouble();

        // Calculando o valor de desconto
        double valorDesconto = precoProduto * (percentualDesconto / 100);

        // Calculando o novo preço com desconto
        double novoPreco = precoProduto - valorDesconto;

        // Exibindo o nome do produto e o novo preço
        System.out.println("Nome do produto: " + nomeProduto);
        System.out.println("Novo preço do produto com desconto: R$ " + novoPreco);

        scanner.close();
    }
}
