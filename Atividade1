6-public class Main {
    public static void main(String[] args) {

        // Corrigindo tipo de dado do número do produto
        String numeroProduto = "ABC123"; 
        
        // Mantendo o tipo de dado correto para o preço do produto
        double precoProduto = 25.00; 
        
        // Inicializando a descrição do produto
        String descricaoProduto = "Fone de ouvido Bluetooth";
        
        // Exibindo a descrição do produto
        System.out.println("Descrição do Produto: " + descricaoProduto);
        
        // Exibindo os dados do produto
        System.out.println("Dados do Produto:");
        System.out.println("Número: " + numeroProduto); // Corrigindo o nome da variável
        System.out.println("Preço: $" + precoProduto);
        System.out.println("Descrição: " + descricaoProduto);
    }
}

--------------------------------------

7-public class ControleEstoque {
    public static void main(String[] args) {

        // Declaração e inicialização de variáveis com tipos de dados corretos
        String nomeProduto = "Fone de Ouvido";
        double precoProduto = 29.99; // O preço é um valor decimal
        int quantidadeProduto = 10; // A quantidade é um número inteiro
        
        // Corrigindo a variável marcaProduto para um valor do tipo String
        String marcaProduto = "MarcaX";

        // Exibindo os dados do produto
        System.out.println("Dados do Produto:");
        System.out.println("Nome: " + nomeProduto);
        System.out.println("Marca: " + marcaProduto);
        System.out.println("Preço: $" + precoProduto);
        System.out.println("Quantidade em estoque: " + quantidadeProduto);
    }
}
